import random
answers = ["Бесспорно", "Мне кажется - да", "Пока неясно, попробуй снова", "Даже не думай",
           "Предрешено", "Вероятнее всего", "Спроси позже", "Мой ответ - нет",
           "Никаких сомнений", "Хорошие перспективы", "Лучше не рассказывать", "По моим данным - нет","Можешь быть уверен в этом", "Да", "Сконцентрируйся и спроси опять", "Весьма сомнительно"]
print()
print("Привет мир, я магический шар, и я знаю ответ на любой твой вопрос")
name = input("Как тебя зовут ? \n >>> ")
print("Привет, ", name)
while True:
    q = input("Задавай вопрос \n >>> ")
    print(random.choice(answers))
    print()
    end = int(input('Если хочешь задать еще вопрос ставь 1, если нет то ставь 2 \n >>> '))
    if end == 1:
        continue
    elif end == 2:
        print("Возвращайся если возникнут вопросы!")
        break
